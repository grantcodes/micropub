{
  "name": "micropub-helper",
  "version": "2.0.0",
  "type": "module",
  "description": "A simple helper class for creating micropub clients",
  "keywords": [
    "micropub",
    "indieweb"
  ],
  "homepage": "https://github.com/grantcodes/micropub",
  "bugs": "https://github.com/grantcodes/micropub/issues",
  "module": "./build/esm/main.js",
  "main": "./build/cjs/main.js",
  "types": "build/esm/main.d.ts",
  "browserslist": "> 1%, not dead",
  "browser": {
    "jsdom/lib/jsdom/living": false,
    "formdata-polyfill/esm.min.js": false,
    "url": false
  },
  "author": "Grant Richmond <mail@grant.codes> (https://grant.codes)",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.24.0",
    "formdata-polyfill": "^4.0.10",
    "qs": "^6.10.2",
    "rel-parser": "^1.1.0"
  },
  "scripts": {
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "build:tests": "tsc -p tests/tsconfig.json",
    "build": "npm run build:esm & npm run build:cjs",
    "prepublish": "npm run build",
    "test:run": "c8 ava --timeout=30s",
    "test": "npm run build:tests && npm run test:run",
    "test-server": "tsc -w ./tests/_server/run.ts -outdir ./build/tests/_server",
    "test-server-2": "tsc -w ./tests/_server/run.ts --module es2020 --moduleResolution node --esModuleInterop  -outdir ./build/tests/_server & nodemon -q -w build build/tests/_server/run.js"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@playwright/test": "^1.17.1",
    "@types/node": "^17.0.2",
    "ava": "^4.0.0-rc.1",
    "c8": "^7.10.0",
    "esbuild": "^0.14.9",
    "express": "^4.17.2",
    "multer": "^1.4.4",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.4"
  },
  "ava": {
    "files": [
      "build/tests/tests/**/*",
      "!build/tests/tests/_server"
    ],
    "typescript": {
      "compile": false,
      "rewritePaths": {
        "src/": "build/tests/src/"
      }
    }
  }
}
